<div class="with-sidebar {{ layout_modifier }} {{ row_sidebar_position|default('with-sidebar--right') }}">
	<div class="with-sidebar__main" role="region">
		{% block sidebar_content %}
			{% include 'atoms-formatted-text' with { formatted_text_paragraphs : 20 } %}
		{% endblock %}
	</div>
	<div class="with-sidebar__sidebar">
		{% block sidebar_sidebars %}
			{% include 'atoms-formatted-text' with { formatted_text_paragraphs : 3 } %}
		{% endblock %}
	</div>
</div>
